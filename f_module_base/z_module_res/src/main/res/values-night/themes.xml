<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ResSplashActivity" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <!--colorPrimary               主要的品牌颜色，影响应用的工具栏、导航栏等主要元素的背景色-->
        <item name="colorPrimary">@color/common_res_primary_color</item>
        <!--colorPrimaryVariant        colorPrimary 的变体，可以用于增加深度或作为主色的附加颜色-->
        <item name="colorPrimaryVariant">@color/common_res_primary_variant_color</item>
        <!--colorOnPrimary             在 colorPrimary 背景上显示文本的颜色，确保文本在主要颜色上有足够的对比度。-->
        <item name="colorOnPrimary">@color/common_res_color_on_primary</item>

        <!--colorSecondary             次要的品牌颜色，通常用于突出显示某些元素。-->
        <item name="colorSecondary">@color/teal_200</item>
        <!--colorSecondaryVariant      colorSecondary 的变体，用于增加深度或作为次要颜色的附加颜色。-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!--colorOnSecondary           在 colorSecondary 背景上显示文本的颜色，确保文本在次要颜色上有足够的对比度。-->
        <item name="colorOnSecondary">@color/black</item>

<!--        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@drawable/common_res_splash_bg</item>-->

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
<!--        <item name="android:windowBackground">@drawable/common_res_splash_bg</item>-->
        <item name="android:windowFullscreen" tools:ignore="DuplicateDefinition">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Application" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/common_res_primary_color</item>
        <item name="colorPrimaryVariant">@color/common_res_primary_variant_color</item>
        <item name="colorOnPrimary">@color/common_res_color_on_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@drawable/common_res_activity_bg</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>