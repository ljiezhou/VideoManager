<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/base_include_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/image_info_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_color_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:id="@+id/image_info_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="图片信息"
                android:textColor="@color/common_text_black33"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/image_info_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="@string/compress_param_image_info_desc"
                android:textColor="@color/common_text_gray_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <!--        百分比压缩 缩放照片-->
        <include
            android:id="@+id/scale_layout"
            layout="@layout/compress_param_scale_layout" />

        <!--        大小压缩-->
        <include
            android:id="@+id/size_layout"
            layout="@layout/compress_param_size_layout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/base_color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/compress_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/common_res_btn_bg"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="压缩"
            android:textColor="@color/base_color_white"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

</FrameLayout>