<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/percent_et"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:inputType="number"
        android:text="1000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/percent_unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KB"
        android:textColor="@color/base_color_black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="@id/percent_et"
        app:layout_constraintStart_toEndOf="@id/percent_et"
        app:layout_constraintTop_toTopOf="@id/percent_et" />

    <!--            style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
    <SeekBar
        android:id="@+id/percent_seek_bar"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:max="100"
        android:progress="50"
        android:progressTint="@color/common_res_primary_color"
        android:thumbTint="@color/common_res_primary_color"
        app:layout_constraintBottom_toBottomOf="@id/percent_unit_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/percent_unit_tv"
        app:layout_constraintTop_toTopOf="@id/percent_unit_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>