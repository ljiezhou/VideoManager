<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toTopOf="@id/main_home_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ds.res.widget.CheckableTextView
        android:id="@+id/main_home_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:drawableTop="@drawable/app_main_nav_icon_home"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="首页"
        android:textColor="@color/main_bottom_item_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_center_view" />

    <View
        android:id="@+id/main_center_view"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_home_tv"
        app:layout_constraintRight_toLeftOf="@id/main_mine_tv"
        app:layout_constraintTop_toTopOf="@id/main_home_tv"
        app:layout_constraintWidth_percent="0.333" />

    <com.ds.res.widget.CheckableTextView
        android:id="@+id/main_mine_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableTop="@drawable/app_main_nav_icon_mine"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="我的"
        android:textColor="@color/main_bottom_item_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_center_view"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/main_history_fl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:background="@drawable/app_main_bottom_center_bg"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="作品"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>